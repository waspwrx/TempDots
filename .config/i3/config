#/u/Tigrenzo Some useful i3 "mode" menus
#
#Power Menu
set $sysmenu "system:  [r]eload  [l]ock  l[o]gout  [p]oweroff  re[b]oot"
bindsym $mod+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym o         exit
    bindsym l         exec i3lock -i /home/stosh/Pictures/StrelkaGruvbox/blank234.png -t
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}
